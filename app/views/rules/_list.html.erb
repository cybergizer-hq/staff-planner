<table class="table">
  <thead>
    <tr>
      <th>Rule name</th>
      <th>Allowance days</th>
      <th>Period</th>
      <th>Is enabled</th>
      <th>Is holiday</th>
      <th>Auto confirm</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% rules.each do |rule| %>
      <tr>
        <td><%= rule.name %></td>
        <td><%= rule.allowance_days %></td>
        <td><%= rule.period %></td>
        <td><%= rule.is_enabled %></td>
        <td><%= rule.is_holiday %></td>
        <td><%= rule.auto_confirm %></td>
        <td><%= link_to 'Show', rule_path(id: rule.id), class: 'button is-primary' %></td>
        <td><%= link_to 'Edit', edit_rule_path(id: rule.id), class: 'button is-primary' %></td>
        <td><%= link_to 'Destroy', rule_path(id: rule.id), method: :delete, class: 'button is-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
