<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Allowance days</th>
      <th>Period</th>
      <th>Is enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% rules.each do |rule| %>
      <tr>
        <td><%= rule.name %></td>
        <td><%= rule.company_id %></td>
        <td><%= rule.allowance_days %></td>
        <td><%= rule.period %></td>
        <td><%= rule.is_enabled %></td>
        <td><%= link_to 'Show', company_rule_path(id: rule.id, company_id: rule.company_id), class: 'button is-primary' %></td>
        <td><%= link_to 'Edit', edit_company_rule_path(id: rule.id, company_id: rule.company_id), class: 'button is-primary' %></td>
        <td><%= button_to 'Destroy', [@company, rule], method: :delete, class: 'button is-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
