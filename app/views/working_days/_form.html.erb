<%= form_with(model: working_day, local: true) do |form| %>
  <%= render 'shared/error', object: working_day %>

  <div class="field">
    <%= form.label :day_of_week %>
    <%= form.select(:day_of_week, options_for_select(Date::DAYNAMES.map.with_index.to_a)) %>
  </div>

  <div class="actions">
    <%= form.submit class: :"button is-small is-success" %>
    <%= link_to 'Back', working_days_path, class: :"button is-small is-info" %>
  </div>
<% end %>
