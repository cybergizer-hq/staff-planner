<p id="notice"><%= notice %></p>

<h1>Working Days company <%= @company.name %></h1>

<table>
  <thead>
    <tr>
      <th>Day of week</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @working_days.each do |working_day| %>
      <tr>
        <td><%= working_day.display_day_of_week %></td>
        <td><%= link_to 'Show', company_working_day_path(id: working_day.id) %></td>
        <td><%= link_to 'Edit', edit_company_working_day_path(id: working_day.id) %></td>
        <td><%= button_to 'Destroy', [@company, working_day], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Working Day', new_company_working_day_path %>
