<table style="background-color:whitesmoke" class="table">
  <thead>
    <th> Created by </th>
    <th> Reason </th>
    <th> Start Period </th>
    <th> End period </th>
    <th> Rule </th>
    <th colspan="3"> Actions </th>
  </thead>
  <% @events.each do |event| %>
    <tbody>
      <td><%= link_to event.employee.account.name, account_path(event.employee.account.id) %></td>
      <td><%= event.reason %></td>
      <td><%= event.start_period.strftime('%Y-%m-%d') %></td>
      <td><%= event.end_period.strftime('%Y-%m-%d')  %></td>
      <td><%= event.rule.name %></td>
      <td><%= link_to 'Show', company_event_path(id: event.id, account_id: @account), class: :"button is-small is-info" %></td>
      <td><%= link_to 'Edit', edit_company_event_path(id: event.id, account_id: @account), class: :"button is-small is-info" %></td>
      <td><%= button_to 'Destroy', company_event_path(id: event.id, account_id: @account), method: :delete, data: { confirm: 'Are you sure?' }, class: :"button is-small is-danger" %></td>
    </tbody>
  <% end %>
</table>
<br>
<%= link_to 'New event', new_company_event_path, class: :"button is-small is-success" %>

