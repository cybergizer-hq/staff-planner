<h3 class="title">Employees</h3>
<table class="table">
  <thead>
    <th> Employee name </th>
    <th> Surname </th>
    <th> Position </th>
    <th> Start date </th>
    <th> Email </th>
    <th> Created at </th>
    <th> Activated </th>
    <th colspan="3"> Actions </th>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to @employee.account.name, account_path(@employee.account.id) %></td>
      <td><%= @employee.account.surname %></td>
      <td><%= @employee.position %></td>
      <td><%= @employee.start_day %></td>
      <td><%= @employee.account.email %></td>
      <td><%= @employee.created_at %></td>
      <td><%= @employee.is_enabled %></td>
      <td><%= link_to 'Edit', edit_company_employee_path(id: @employee.id, company_id: @company.id), class: "button is-small is-info" %></td>
      <td><%= button_to 'Destroy', company_employee_path(id: @employee.id, company_id: @company.id), method: :delete, class: "button is-small is-danger" %></td>
    </tr>
  </tbody>
</table>
<br>
<%= link_to 'Back', company_path(@company), class: "button is-medium" %>
