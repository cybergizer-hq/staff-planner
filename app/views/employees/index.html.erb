<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to 'Show', company_employee_path(id: employee.id) %></td>
        <td><%= link_to 'Edit', edit_company_employee_path(id: employee.id) %></td>
        <td><%= link_to 'Destroy', company_employee_path(id: employee.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

