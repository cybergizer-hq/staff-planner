<h3 class="title">Employees</h3>
<table class="table">
  <thead>
    <th> Employee name </th>
    <th> Position </th>
    <th> Start day </th>
    <th> Activated </th>
    <th colspan="3"> Actions </th>
  </thead>
  <% @employees.each do |employee| %>
    <tbody>
      <tr>
        <td><%= link_to employee.account.name, employee_path(id: employee.id) %></td>
        <td><%= employee.position %></td>
        <td><%= employee.start_day %></td>
        <td><%= employee.is_enabled %></td>
        <% if can?(:destroy, employee) %>
          <td><%= link_to 'Show', employee_path(id: employee.id), class: :"button is-small is-info" %></td>
          <td><%= link_to 'Edit', edit_employee_path(id: employee.id), class: :"button is-small is-info" %></td>
          <td><%= link_to 'Destroy', employee_path(id: employee.id), method: :delete, data: { confirm: 'Are you sure?' }, class: :"button is-small is-danger" %></td>
        <% end %>
      </tr>
    </tbody>
  <% end %>
</table>
<br>
