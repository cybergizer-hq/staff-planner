<%= form_with(model: [@company, employee], local: true) do |form| %>
  <%= render 'shared/error', object: employee %>
  <div class="field">
    <%= form.label :position %>
    <%= form.text_field :position, id: :employee_position %>
  </div>

  <div class="field">
    <%= form.label :start_day %>
    <%= form.date_field :start_day, value: Date.today, id: :employee_start_day %>
  </div>

  <% if !employee.id %>
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, id: :email %>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :role %>
    <%= select_tag :role, options_for_select(['owner', 'employee'])%>
  </div>

  <div class="actions">
    <%= form.submit class: :"button is-small is-success" %>
  </div>
<% end %>
