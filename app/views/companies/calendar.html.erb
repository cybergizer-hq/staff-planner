<h1>
    Company Name: <%= @calendar.company_name %>
</h1>

<table style="background-color:whitesmoke" class="table">
  <thead>
    <th>Employee</th>
    <th>Position</th>
      <% @calendar.days.each do |day| %>
        <th style="padding-bottom:0.5em;">
          <%= day.strftime('%a')[0..1] %>
        </th>
      <% end %>
  </thead>
  <% @calendar.employees.each do |employee| %>
    <tbody>
      <td>
        <%= employee.account.name %>
      </td>
      <td>
        <%= employee.position %>
      </td>
      <% @calendar.days.each do |day| %>
        <% if @calendar.working_day?(day) %>
          <td style='padding-bottom:0.5em;'>
        <% else %>
          <td style='padding-bottom:0.5em;background-color:lightgray'>
        <% end %>
        <%= day.strftime('%d') %>
          </td>
      <% end %>
    </tbody>
  <% end %>
</table>
<%= link_to 'New Employee', new_company_employee_path %>