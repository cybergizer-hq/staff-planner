<div class="columns is-desktop is-multiline is-centered is-vcentered">
  <div class="column is-narrow">
    <img src="/staff_planner.png" alt="logo" width="300" height="28">
    <div class="columns is-desktop is-multiline is-centered is-vcentered">
      <%= link_to account_alfred_omniauth_authorize_path, class: "button is-medium is-blue" do %>
        Sign Up With Alfred
      <% end %>
    </div>
    <% if ENV.fetch('SKIP_ALFRED', false) == 'true' %>
      <br />
      <div class="columns is-desktop is-multiline is-centered is-vcentered">
        <%= link_to 'Login as Developer', account_developer_omniauth_callback_path, class: "button is-medium is-info" %>
      </div>
    <% end %>
  </div>
</div>
