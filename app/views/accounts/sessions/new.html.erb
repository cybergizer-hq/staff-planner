<div class="columns is-desktop is-multiline is-centered is-vcentered">
  <div class="column is-narrow">
    <%= form_for(@account, url: account_session_path(@account)) do |f| %>
      <img src="/staff_planner.png" alt="logo" width="300" height="28">
      <div class="field">
        <p class="control">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :input, placeholder: :"Enter your e-mail" %>
        </p>
      </div>
      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field 'password', autocomplete: "password", class: :input, placeholder: :"Enter your password" %>
      </div>
      <div class="actions">
        <div class="buttons">
          <input class="button is-medium is-success" type="submit" value="Login" />
          <%= link_to 'Sign up', new_account_registration_path, class: "button is-medium is-info" %>
          <%= link_to account_github_omniauth_authorize_path, class: "button is-medium is-black" do %>
            <ion-icon name="logo-github"></ion-icon> Sign Up With Github
          <% end %>
          <%= link_to account_alfred_omniauth_authorize_path, class: "button is-medium is-blue" do %>
            Sign Up With Alfred
          <% end %>
        </div>
      </div>
    <% end %>
    <br>
    <%= render 'accounts/shared/links' %>
  </div>
</div>
