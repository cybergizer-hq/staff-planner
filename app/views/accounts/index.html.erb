<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td>Name: <%= account.name %></td>
        <td>Surname: <%= account.surname %></td>
        <td>Email: <%= account.email %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= button_to 'Delete Page', account, method: :delete %><td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Account', new_account_session_path %>
