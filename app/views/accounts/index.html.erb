<h1>Accounts</h1>

<table style="background-color:whitesmoke" class="table">
  <thead>
    <th> Name </th>
    <th> Surname </th>
    <th> Email </th>
    <th> Date of birth </th>
    <th> Created at </th>
    <th colspan="3"> Actions </th>
  </thead>
  <% @accounts.each do |account|  %>
    <tbody>
      <td><%= account.name %></td>
      <td><%= account.surname %></td>
      <td><%= account.email %></td>
      <td><%= account.date_of_birth %></td>
      <td><%= account.created_at %></td>
  <td><a class="button is-small is-success" href='<%= account_path(account) %>'>Show</a></td>
  <td><a class="button is-small is-info" href='<%= edit_account_path(account) %>'>Edit</a></td>
  <td><%= button_to 'Delete account', {controller: :accounts,
      action: :'destroy', id: account.id }, class: :"button is-small is-info", method: :delete %></a></td>
    </tbody>
  <% end %>
</table>
<br>


<%= link_to 'New Account', new_account_session_path %>
