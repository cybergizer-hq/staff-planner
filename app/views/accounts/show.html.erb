<h3 class="title">Your profile</h3>
<table class="table" />
  <thead>
    <th> Name </th>
    <th> Surname </th>
    <th> E-mail </th>
    <th> Company </th>
    <th colspan="3"> Actions </th>
  </thead>
  <tbody>
    <td><%= @account.name %></td>
    <td><%= @account.surname %></td>
    <td><%= @account.email %></td>
    <td>
      <% if @companies.present? %>
        <% @companies.each do |company| %>
          <p><%= link_to company.name, company_calendar_path(company), class: 'is-link' %></p>
        <% end %>
      <% else %>
        <p>You don't have companies</p>
      <% end %>
    </td>
    <td>
      <div class="buttons are-small">
        <%= link_to 'Edit account', edit_account_path(@account), class: 'button is-info' %>
        <%= button_to 'Delete account', {controller: :accounts, action: :'destroy'}, class: "button is-danger", method: :delete %>
        <%= link_to 'Create new company', new_company_path, class: 'button is-success' %>
      </div>
  </tbody>
</table>
<% if @account_events.any? %>
  <h3 class="title">Your events</h3>
  <table class="table">
    <thead>
      <th> Reason </th>
      <th> Start Period </th>
      <th> End period </th>
      <th> Rule </th>
      <th colspan="3"> Actions </th>
    </thead>
    <tbody>
      <%= render @account_events %>
    <tbody>
  </table>
<% else %>
  <article class="message is-dark">
    <div class="message-body">
    You haven't any events.
    </div>
  </article>
<% end %>
